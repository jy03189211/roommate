<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="fi.aalto_iot.tomato.activity.room.Room_default_fragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/generic_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <!-- Occupied status -->
            <RelativeLayout
                android:id="@+id/occupied_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/room_status_indicator_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/room_status_indicator_occupied" />
                <TextView
                    android:id="@+id/room_status_indicator_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/room_status_indicator_circle"
                    android:text="@string/unknown" />

            </RelativeLayout>
            <!-- Air quality status -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/occupied_layout"
                android:layout_toRightOf="@+id/occupied_layout"
                android:layout_gravity="right"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/room_air_indicator_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/room_status_indicator_occupied" />
                <TextView
                    android:id="@+id/room_air_indicator_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/room_air_indicator_circle"
                    android:layout_toRightOf="@+id/room_air_indicator_circle"
                    android:text="@string/unknown" />

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/detail_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temperature -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/room_temperature_indicator_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/temperature" />

                <!-- header + bars + names for them -->
                <RelativeLayout
                    android:id="@+id/temperature_bar_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/room_temperature_indicator_icon"
                    android:layout_toRightOf="@+id/room_temperature_indicator_icon">
                    <TextView
                        android:id="@+id/temperature_bar_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"/>
                    <ImageView
                        android:id="@+id/temperature_bar_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temperature_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/temperature_bar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/temperature_bar_1"
                        android:layout_toRightOf="@+id/temperature_bar_1"
                        android:layout_below="@+id/temperature_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/temperature_bar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/temperature_bar_2"
                        android:layout_toRightOf="@+id/temperature_bar_2"
                        android:layout_below="@+id/temperature_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/temperature_bar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/temperature_bar_3"
                        android:layout_toRightOf="@+id/temperature_bar_3"
                        android:layout_below="@+id/temperature_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/temperature_bar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/temperature_bar_4"
                        android:layout_toRightOf="@+id/temperature_bar_4"
                        android:layout_below="@+id/temperature_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/temperature_bar_all"
                    android:layout_toRightOf="@+id/temperature_bar_all"
                    android:text="23 C"
                    android:textSize="24dp"/>
            </RelativeLayout>

            <!-- Humidity -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/room_humidity_indicator_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/humidity" />

                <!-- header + bars + names for them -->
                <RelativeLayout
                    android:id="@+id/humidity_bar_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/room_humidity_indicator_icon"
                    android:layout_toRightOf="@+id/room_humidity_indicator_icon">
                    <TextView
                        android:id="@+id/humidity_bar_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"/>
                    <ImageView
                        android:id="@+id/humidity_bar_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/humidity_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/humidity_bar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/humidity_bar_1"
                        android:layout_toRightOf="@+id/humidity_bar_1"
                        android:layout_below="@+id/humidity_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/humidity_bar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/humidity_bar_2"
                        android:layout_toRightOf="@+id/humidity_bar_2"
                        android:layout_below="@+id/humidity_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/humidity_bar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/humidity_bar_3"
                        android:layout_toRightOf="@+id/humidity_bar_3"
                        android:layout_below="@+id/humidity_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/humidity_bar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/humidity_bar_4"
                        android:layout_toRightOf="@+id/humidity_bar_4"
                        android:layout_below="@+id/humidity_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/humidity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/humidity_bar_all"
                    android:layout_toRightOf="@+id/humidity_bar_all"
                    android:text="23 C"
                    android:textSize="24dp"/>
            </RelativeLayout>

            <!-- CO2 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/room_co2_indicator_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/co2" />

                <!-- header + bars + names for them -->
                <RelativeLayout
                    android:id="@+id/co2_bar_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/room_co2_indicator_icon"
                    android:layout_toRightOf="@+id/room_co2_indicator_icon">
                    <TextView
                        android:id="@+id/co2_bar_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Header"/>
                    <ImageView
                        android:id="@+id/co2_bar_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/co2_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/co2_bar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/co2_bar_1"
                        android:layout_toRightOf="@+id/co2_bar_1"
                        android:layout_below="@+id/co2_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/co2_bar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/co2_bar_2"
                        android:layout_toRightOf="@+id/co2_bar_2"
                        android:layout_below="@+id/co2_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/co2_bar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/co2_bar_3"
                        android:layout_toRightOf="@+id/co2_bar_3"
                        android:layout_below="@+id/co2_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                    <ImageView
                        android:id="@+id/co2_bar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/co2_bar_4"
                        android:layout_toRightOf="@+id/co2_bar_4"
                        android:layout_below="@+id/co2_bar_header"
                        android:padding="@dimen/padding_bar"
                        android:src="@drawable/scale_dash_off"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/co2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/co2_bar_all"
                    android:layout_toRightOf="@+id/co2_bar_all"
                    android:text="23 C"
                    android:textSize="24dp"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
